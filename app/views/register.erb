<!--contact form-->
<section class="contact section-spacing" id="contact">
  <div class="container">
    <div class="row">
    <div class="col-md-6 center-block">    
    <div class="contact-form">
      <form role="form" action="/user/register" method="POST" id="register">
        <% if @params[:errors] %>
          <div class="alert alert-danger">
            <ul>
              <% @params[:errors].each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <hr />
        <%= @input_form.create_form("name", {'type' => 'text', 'class' => 'form-control', 'placeholder' => 'Your Name'}, {:conditions => @params , :value_if_condition => @params[:name], :value_if_not_condition => ''}) %>

        <%= @input_form.create_form("email", {'type' => 'email', 'class' => 'form-control', 'placeholder' => 'Your Email', 'required' => true}, {:conditions => @params , :value_if_condition => @params[:email], :value_if_not_condition => ''}) %>

        <%= @input_form.create_form("password", {'type' => 'password', 'class' => 'form-control', 'placeholder' => 'Password', 'required' => true}, {:conditions => @params, :value_if_condition => '', :value_if_not_condition => ''}) %>
        <button type="submit" class="btn btn-default submit-btn" id="submit-btn" value="Send">Create Account</button>
      </form>
      <span>Already have an account? <a href='/user/login'>Sign In</a>
      <div class="success-cf">
        <p><i class="fa fa-envelope"></i> You account has been created!</p>
      </div>
      <div class="error-cf">
        <p><i class="fa fa-exclamation-triangle"></i>Oppsss. Something went wrong</p>
      </div>
    </div>
  </div>
</section>